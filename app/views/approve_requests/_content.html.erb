<div class="card-primary">
  <div class="card-header">
    <h3 class="card-title"><strong>Request</strong></h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <strong></i>Sender code</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= "MB#{@approval_request.request.user.id}" %></span>
    </p>
    <hr>
    <strong></i>Staff name</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.request.user.name %></span>
    </p>
    <hr>
    <strong></i>Email</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.request.user.email %></span>
    </p>
    <hr>
    <strong></i>Position</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.request.user.position %></span>
    </p>
    <hr>
    <strong></i>Workspace</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.request.user.workspace %></span>
    </p>
    <hr>
    <strong></i>Kind</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.request.request_type %></span>
    </p>
    <hr>
    <strong>Time Of Creation</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= l(@approval_request.request.created_at, format: :short) %></span>
    </p>
    <hr>
    <strong>Time Request</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= "#{l(@approval_request.request.time_from, format: :short)} - #{l(@approval_request.request.time_to, format: :short)}" %></span>
    </p>
    <hr>
    <strong></i>Reason</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.request.reason %></span>
    </p>
    <hr>
    <strong>Status</strong>
    <p class="text-muted">
      <span class="tag tag-danger"><%= @approval_request.status  %></span>
    </p>
    <hr>
    <% if @approval_request.waiting? %>
      <div class="center">
        <%= link_to t(".approve"), approve_request_path(@approval_request, status: "approval"), method: :patch, class: "btn btn-primary" %>
        <%= link_to t(".reject"), approve_request_path(@approval_request, status: "rejected"), method: :patch, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
<!-- /.card-body -->
</div>
<!-- /.card -->
