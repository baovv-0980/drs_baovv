<% provide(:title, t(".begin_title")) %>
<div class="container">
  <h1 class="title text-center"><%= t ".title" %></h1>
    <div class="create">
      <%= link_to t(".create_user"), new_admin_manage_user_path, class: "btn btn-primary" %>
    </div>
  <div class="form-group center">
     <%= form_tag(admin_manage_users_path, method: :get) do %>
      <%= select_tag :t, options_for_select([Settings.enum.name,Settings.enum.email,Settings.enum.id]) %>
      <%= text_field_tag :q %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
  <div id="create-control">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col"><%= t ".number" %></th>
          <th scope="col"><%= t ".user_id" %></th>
          <th scope="col"><%= t ".role" %></th>
          <th scope="col"><%= t ".division" %></th>
          <th scope="col"><%= t ".user_name" %></th>
          <th scope="col"><%= t ".user_email" %></th>
          <th scope="col"><%= t ".user_phone" %></th>
          <th scope="col"><%= t ".user_birthday" %></th>
          <th scope="col"><%= t ".user_skill" %></th>
          <th scope="col"><%= t ".action" %></th>
        </tr>
        <tbody>
          <%= will_paginate @users %>
          <% @users.each_with_index do |user, i| %>
              <%= render partial: "user", locals: {user: user, i: i} %>
          <% end %>
        </tbody>
      </thead>
    </table>
  </div>
</div>
