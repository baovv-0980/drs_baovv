<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to t(".title"), root_path, class: "navbar-brand" %>
  <ul class="navbar-nav mr-auto">
    <% if current_user.admin? %>
      <li class="nav-item">
        <%= link_to "Manage User", admin_manage_users_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".manage_division"), manage_divisions_path, class: "nav-link" %>
      </li>
    <% elsif current_user.manager? %>
      <% unless current_user.division.parent_id.blank? %>
        <li class="nav-item">
          <%= link_to t(".reports"), reports_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".requests"), requests_path, class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= link_to t(".manage_request"), approve_requests_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".manage_report"), manager_show_reports_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".manage_member"), manage_members_path, class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item">
          <%= link_to t(".reports"), reports_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".requests"), requests_path, class: "nav-link" %>
        </li>
    <% end %>
  </ul>

  <ul class="navbar-nav ">
    <li class="nav-item dropdown">
      <%= render "notifications/notification_center", notifications: @notifications %>
    </li>

    <li class="nav-item dropdown">
      <%= link_to current_user.name, "#", class: "nav-link dropdown-toggle", "data-toggle": "dropdown" %>
      <div class="dropdown-menu">
        <%= link_to t(".profile"), edit_profile_path(current_user.id), class: "dropdown-item" %>
        <%= link_to t(".logout"), logout_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
  </ul>
</nav>
