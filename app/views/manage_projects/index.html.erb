<div class="wrapper">
  <div class="content-wrapper">
    <%= render partial: "shared/head_profile", locals: {path1: nil, title: "Manage Project Groups", link1: "", link2: nil}%>
    <section class="content">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Projects</h3>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
            <thead>
                <tr>
                  <th>
                    #
                  </th>
                  <th>
                    Project Name
                  </th>
                  <th>
                    Divisions Name
                  </th>
                  <th>
                    Description
                  </th>
                  <th class="text-center">
                    Team Members
                  </th>
                  <th>
                    Reports
                  </th>
                  <th class="text-center">
                    Action
                  </th>
                </tr>
            </thead>
            <tbody>
              <% @groups.each_with_index do |group, i| %>
                <%= render partial: "manage_projects/group", locals: {group: group, i: i}%>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
</div>
