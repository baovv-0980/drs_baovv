<tr>
  <td>
    <%= i + 1 %>
  </td>
  <td>
    <a>
      <%= group.name %>
    </a>
    <br/>
    <small>
      <%= l(group.created_at, format: :long) %>
    </small>
  </td>
  <td>
  <p><%= group.division.name %></p>
  </td>
  <td>
  <p><%= group.description %></p>
  </td>
  <td>
  <ul class="list-inline text-center">
    <%= link_to manage_member_path(group) do %>
      <%= group.users.count %>
      <i class="far fa-user"></i>
    <% end %>
  </ul>
  </td>
  <td class="project_progress">
  <ul class="list-inline">
    <%= link_to manage_report_path(group) do %>
      <%= group.reports.count %>
       <i class="far fa-calendar"></i>
    <% end %>
    </li>
  </ul>
  </td>

  <td class="project-actions text-right">
    <%= link_to edit_manage_group_path(id: group, path: manage_projects_path), class: "btn btn-info btn-sm" do %>
      <i class="fas fa-pencil-alt"></i>
      Edit
    <% end %>
    <%= link_to manage_group_path(group), method: :delete, class: "btn btn-danger btn-sm" do %>
      <i class="fas fa-trash">
      </i>
      Delete
    <% end %>
  </td>
</tr>
