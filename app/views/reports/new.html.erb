<div id="form-request" class="container">
  <%= render "shared/error_messages", object: @report %>

  <h1 id="title" class="text-center"><%= t ".new_report" %></h1>
  <%= form_for(@report, url: reports_path) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :plan %>
      <%= f.text_area :plan, class: "form-control", placeholder: t(".placeholder")  %>
    </div>
    <div class="form-group">
      <%= f.label :actual %>
      <%= f.text_area :actual, class: "form-control", placeholder: t(".placeholder") %>
    </div>
    <div class="form-group">
      <%= f.label :next_plan %>
      <%= f.text_area :next_plan, class: "form-control", placeholder: t(".placeholder") %>
    </div>
    <div class="form-group">
      <%= f.label :issue %>
      <%= f.text_area :issue, class: "form-control", placeholder: t(".placeholder") %>
    </div>
    <div class="actions">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
